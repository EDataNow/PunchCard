%link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :rel => "stylesheet"}/
%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"}
%script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"}
%span= if @assignments.where(user_id: current_user.id).exists? |
      render 'punch_out'                                    |
    else                                                    |
      render 'punch_in'                                     |
    end                                                     |
%span
  %h3 Employees Currently Signed In
%table.table.table-hover
  %thead
    %tr
      %th User
      %th Location
      %th{:colspan => "3"}
  %tbody
    - @assignments.each do |assignment|
      %tr
        %td= assignment.username
        %td= assignment.location
        %td= link_to '<button type="button" class="btn btn-default">Details</button>'.html_safe, assignment
