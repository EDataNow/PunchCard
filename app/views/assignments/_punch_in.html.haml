= form_for(@assignment) do |f|
  - if @assignment.errors.any?
    #error_explanation
      %h2
        = pluralize(@assignment.errors.count, "error")
        prohibited this assignment from being saved:
      %ul
        - @assignment.errors.full_messages.each do |message|
          %li= message
  %span.actions
    = button_tag(type: 'submit', class: "btn btn-primary", id: 'punch_in') do
      Punch In To
    = f.hidden_field :user_id, value: current_user.id
  %span.field
    = collection_select(:shift, :location_id, @locations.order(:name), :id, :name )
