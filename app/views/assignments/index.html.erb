<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.username %></td>
        <td><%= assignment.location %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td>
          <%= if session[:username] == assignment.username
            link_to 'Sign Out', assignment, method: :delete, data: { confirm: 'Are you sure?' }
          end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

