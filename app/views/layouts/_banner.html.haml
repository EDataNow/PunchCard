%link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :rel => "stylesheet"}/
%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"}
%script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"}
.container
  .jumbotron{:style => "background-color:rgb(9,80,208); padding:25px !important; width: 100%;"}
    %span
      = image_tag("Logo.png", size: "75x75", alt: "Logo")
      %font#Title{:color => "white", :size => "22", :style => "vertical-align: middle"} PunchCard
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right{:style => "vertical-align: middle"}
        - if user_signed_in?
          %font{:color => "white", :size => "4"}
            Welcome,
            %b
              = current_user.first_name.titleize
              = current_user.last_name.titleize
            = link_to '<button type="button" class="btn btn-danger" id="LogOut">Log Out</button>'.html_safe, destroy_user_session_path, :method => :delete
      %br
      %br
      %ul.nav.navbar-nav.navbar-right{:style => "vertical-align: middle"}
        - if current_user.try(:admin?)
          = link_to '<button type="button" class="btn btn-secondary">View PunchSheet</button>'.html_safe, assignments_path
          = link_to '<button type="button" class="btn btn-secondary">Manage Users</button>'.html_safe, users_path
          = link_to '<button type="button" class="btn btn-secondary">Manage Locations</button>'.html_safe, locations_path



